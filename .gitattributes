*.zip filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.js filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
frontend/css/ filter=lfs diff=lfs merge=lfs -text
frontend/js/ filter=lfs diff=lfs merge=lfs -text
backend/uploads/ filter=lfs diff=lfs merge=lfs -text
# Ensure JSON files use LF (Unix-style) in repo, but Windows can have CRLF locally
*.json text eol=lf

# Optional: Python files
*.py text eol=lf

# Optional: ignore line ending warnings for large binary files
*.key binary
*.p12 binary
